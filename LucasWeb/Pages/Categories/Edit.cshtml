@page
@model LucasWeb.Pages.Categories.EditModel
@{
}
<div class="container p-4">
    <form method="post">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Edit Category</h2>
        </div>
        <div asp-validation-summary="All"></div>
        <input asp-for="Category.Id" hidden/>
        <div class="mb-3">
            <label asp-for="Category.Name">Name</label>
            <input asp-for="Category.Name" type="text" style="width: 100%"/>
            <span asp-validation-for="Category.Name" class="text-danger">Please enter the correct name!</span>
        </div>
        <div class="mb-3">
            <label asp-for="Category.DisplayOrder">Display Order: </label>
            <input asp-for="Category.DisplayOrder" type="number" style="width: 100%"/>
            <span asp-validation-for="Category.DisplayOrder" class="text-danger">Please enter the correct display order!</span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px;">Update</button>
    </form>
</div>