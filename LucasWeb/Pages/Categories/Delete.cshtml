@page
@model LucasWeb.Pages.Categories.DeleteModel
@{
}
<div class="container p-4">
    <form method="post">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Delete Category</h2>
        </div>
        <div asp-validation-summary="All"></div>
        <input asp-for="Category.Id" hidden/>
        <div class="mb-3">
            <label asp-for="Category.Name">Name</label>
            <input asp-for="Category.Name" disabled type="text" style="width: 100%"/>
        
        </div>
        <div class="mb-3">
            <label asp-for="Category.DisplayOrder">Display Order: </label>
            <input disabled asp-for="Category.DisplayOrder" type="number" style="width: 100%"/>
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px;">Delete</button>
    </form>
</div>